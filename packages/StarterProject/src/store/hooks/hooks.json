{
  "hooks": [
    {
      "name": "useSaveCustomerEmail",
      "fetchOptions": {
        "url": "",
        "query": ""
      },
      "componentType": "omni-hook",
      "exec": [
        {
          "name": "StateMachine",
          "function": "send",
          "params": [
            "authentication",
            "LOGIN",
            {
              "user": {
                "email": "{email}"
              }
            }
          ]
        },
        {
          "name": "Navigation",
          "function": "linkTo",
          "params": ["/auth/signin/classic/password/second"]
        }
      ]
    },
    {
      "name": "useSignWithEmail&Password",
      "fetchOptions": {
        "url": "{domain}/api/vtexid/pub/authentication/start",
        "query": ""
      },
      "headerOptions": {
        "Content-Type": "application/x-www-form-urlencoded",
        "parseResponse": {
          "to": {
            "authenticationToken": "authenticationToken"
          }
        }
      },
      "componentType": "omni-hook",
      "exec": [
        {
          "name": "StateMachine",
          "function": "send",
          "params": ["authentication", "LOGIN"],
          "onSuccess": [
            {
              "name": "Navigation",
              "function": "linkTo",
              "params": ["/home/welcome"]
            }
          ],
          "onError": [
            {
              "name": "Navigation",
              "function": "linkTo",
              "params": ["/auth/invalidCredentials"]
            }
          ]
        }
      ]
    }
  ]
}

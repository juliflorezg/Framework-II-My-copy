{
  "hooks": [
    {
      "name": "useSaveCustomerEmail",
      "fetchOptions": {
        "url": "",
        "query": ""
      },
      "componentType": "omni-hook",
      "exec": [
        {
          "name": "StateMachine",
          "function": "send",
          "params": [
            "authentication",
            "LOGIN",
            {
              "user": {
                "email": "{email}"
              }
            }
          ]
        },
        {
          "name": "Navigation",
          "function": "linkTo",
          "params": ["/auth/signin/classic/password/second"]
        }
      ]
    },
    {
      "name": "useSignWithEmailAndPassword",
      "fetchOptions": {
        "url": "{domain}/api/vtexid/pub/authentication/start"
      },
      "headerOptions": {
        "Content-Type": "application/x-www-form-urlencoded"
      },
      "parseResponse": {
        "to": {
          "authenticationToken": "authenticationToken"
        }
      },
      "componentType": "omni-hook",
      "exec": [
        {
          "name": "StateMachine",
          "function": "send",
          "params": ["authentication", "LOGIN"],
          "onSuccess": [
            {
              "name": "Navigation",
              "function": "linkTo",
              "params": ["/pokemon/home"]
            }
          ],
          "onError": [
            {
              "name": "Navigation",
              "function": "linkTo",
              "params": ["/auth/invalidCredentials"]
            }
          ]
        }
      ]
    },
    {
      "name": "useMewtwoPokemon",
      "componentType": "omni-hook",
      "fetchOptions": {
        "method": "GET",
        "url": "https://pokeapi.co/api/v2/pokemon/mewtwo"
      },
      "parseResponse": {
        "to": {
          "name": "name",
          "image": "sprites.other.home.front_default",
          "id": "id",
          "weight": "weight",
          "height": "height",
          "habilidadesDeAPI": "abilities"
        }
      },
      "exec": [
        {
          "name": "useMewtwoPokemon"
        },
        {
          "name": "StateMachine",
          "function": "send",
          "dependsOn": "useMewtwoPokemon",
          "params": [
            "authentication",
            "SET_USER_DATA",
            {
              "user": {
                "nameFromHook": "{name}",
                "image": "{image}",
                "id": "{id}",
                "weight": "{weight}",
                "height": "{height}",
                "habilidadesEnMaquina": "{habilidadesDeAPI}"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "usePokemonDetail",
      "componentType": "omni-hook",
      "fetchOptions": {
        "method": "",
        "url": ""
      },
      "exec": [
        {
          "name": "StateMachine",
          "function": "getData",
          "params": ["authentication"]
        }
      ]
    },
    {
      "name": "usePokemonList",
      "componentType": "omni-hook",
      "fetchOptions":{
        "url": "https://pokeapi.co/api/v2/pokemon?limit=100&offset=0",
        "method": "GET"
      },
      "parseResponse": {
        "to": {
          "results": "results"
        }
      },
      "exec": [
        {
          "name": "usePokemonList"
        }
      ]
    }
  ]
}
